<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="de.dlr.sc.virsat.two.ui.command.commit"
            name="Commit Project to Repository">
      </command>
      <command
            id="de.dlr.sc.virsat.two.ui.command.update"
            name="Update Project from Repository">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="de.dlr.sc.virsat.svn.ui.action.CustomCommitAction"
            commandId="de.dlr.sc.virsat.two.ui.command.commit">
         <enabledWhen>
            <with
                  variable="selection">
               <iterate
                     ifEmpty="false">
                  <test
                        args="org.eclipse.team.core.repository,org.eclipse.team.svn.core.svnnature"
                        forcePluginActivation="true"
                        property="de.dlr.sc.virsat.svn.ui.projectPersistentProperty">
                  </test>
               </iterate>
            </with>
         </enabledWhen>
      </handler>
      <handler
            class="de.dlr.sc.virsat.svn.ui.action.CustomUpdateAction"
            commandId="de.dlr.sc.virsat.two.ui.command.update">
         <enabledWhen>
            <with
                  variable="selection">
               <iterate
                  ifEmpty="false">
                  <test
                        args="org.eclipse.team.core.repository,org.eclipse.team.svn.core.svnnature"
                        forcePluginActivation="true"
                        property="de.dlr.sc.virsat.svn.ui.projectPersistentProperty">
                  </test>
               </iterate>
            </with>
         </enabledWhen>
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:de.dlr.sc.virsat.project.ui.navigator.menu#PopupMenu">
         <separator
               name="de.dlr.sc.virsat.svn.ui.svn"
               visible="true">
         </separator>
         <command
               commandId="de.dlr.sc.virsat.two.ui.command.commit"
               icon="resources/commit.gif"
               label="Commit Project to Repository"
               style="push">
         </command>
         <command
               commandId="de.dlr.sc.virsat.two.ui.command.update"
               icon="resources/update.gif"
               label="Update Project from Repository"
               style="push">
         </command>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="toolbar:de.dlr.sc.virsat.project.ui.navigator.view">
         <command
               commandId="de.dlr.sc.virsat.two.ui.command.commit"
               icon="resources/commit.gif"
               label="Commit Project to Repository"
               style="push">
         </command>
         <command
               commandId="de.dlr.sc.virsat.two.ui.command.update"
               icon="resources/update.gif"
               label="Update Project from Repository"
               style="push">
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.core.expressions.propertyTesters">
      <propertyTester
            class="de.dlr.sc.virsat.svn.ui.propertyTester.VirSatPropertyTesterPersistentProject"
            id="de.dlr.sc.virsat.svn.ui.PersistentVirSatProjectResource"
            namespace="de.dlr.sc.virsat.svn.ui"
            properties="projectPersistentProperty"
            type="java.lang.Object">
      </propertyTester>
   </extension>

</plugin>
